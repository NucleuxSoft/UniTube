<Page
    x:Class="UniTube.Views.MasterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:views="using:UniTube.Views"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid x:Name="BottomLayer" Background="{StaticResource MainColorBrush}" Margin="0 -24 0 0"
              Grid.ColumnSpan="2" RequestedTheme="Dark">

            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar" Height="32" Grid.Row="1" Background="Transparent">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Viewbox x:Name="Logo" Width="16" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform">
                    <Canvas Width="167.204" Height="118.8">
                        <Path Data="{StaticResource LogoUniTube}" Fill="White">
                            <Path.RenderTransform>
                                <TranslateTransform X="-9.861" Y="-47.173"/>
                            </Path.RenderTransform>
                        </Path>
                    </Canvas>
                </Viewbox>
                
                <Grid x:Name="MainTitleBar" Background="Transparent" Grid.ColumnSpan="2">
                    <TextBlock x:Name="AppName" Text="{StaticResource AppName}" VerticalAlignment="Center"
                               Style="{StaticResource CaptionTextBlockStyle}" TextAlignment="Center"/>
                </Grid>

                <Button Style="{StaticResource NavigationBackButtonSmallStyle}" HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" FontSize="12" Width="48" IsEnabled="False" Visibility="Collapsed"/>

            </Grid>

            <Grid x:Name="AppBar" Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="PaneToggleButton" Style="{StaticResource PaneToggleButtonStyle}"/>

            </Grid>

        </Grid>

        <Grid x:Name="MidLayer" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Grid.Row="1">
            <views:MenuPage/>
        </Grid>
        
        <Grid x:Name="TopLayer" Grid.Row="1" Grid.Column="1" Margin="0 -20 0 0">

            <controls:DropShadowPanel BlurRadius="6.0" ShadowOpacity="0.16"
                                      OffsetX="-3.0" OffsetY="-3.0" Color="Black"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch">
                <Rectangle Fill="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>
            </controls:DropShadowPanel>
            
        </Grid>
        
    </Grid>
</Page>
