                             Color="{StaticResource MainColor}" />

            <fcu:AcrylicBrush x:Key="MainColorAcrylicBrush"
                              BackgroundSource="HostBackdrop"
                              TintColor="{StaticResource MainColor}"
                              TintOpacity="0.7"
                              FallbackColor="{StaticResource MainColor}" />

